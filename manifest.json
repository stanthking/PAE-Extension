{
  "manifest_version": 3,
  "name": "Promena Auto-Extend Pro",
  "version": "3.2.5",
  "description": "Professional auction time extension tool for Promena platform with bid analysis",
  "author": "Your Name",

  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "https://solutions.promena.net/*",
    "https://solutionss.promena.net/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://solutions.promena.net/*",
        "https://solutionss.promena.net/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "update_url": "https://raw.githubusercontent.com/stanthking/promena-autoextend/main/updates.xml"
}
